@model ViewModelToDo



<div id="ModalContent">
    <div class="modal-header">
        <h5 class="modal-title">@Model.ToDo.Title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">

        <div class="more">
            <div class="description">
                <h4>Description<h4>
                        <p>@Model.ToDo.Description</p>

            </div>
            <div class="Status">
                <h4>Status<h4>
                        @if (Model.ToDo.Status == 1)
                        {
                            <p>To Do</p>
                        }
                        else if (Model.ToDo.Status == 2)
                        {
                            <p>Doing</p>
                        }
                        else
                        {
                            <p>Done</p>
                        }
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
